<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.nosnow.gmall1108.manage.mapper.SpuSaleAttrMapper">
    <select  id ="selectSpuSaleAttrList" parameterType="long" resultMap="spuSaleAttrMap">
        select sa.id ,sa.spu_id, sa.sale_attr_name,sa.sale_attr_id,
        sv.id sale_attr_value_id,
        sv.sale_attr_value_name
        from spu_sale_attr sa inner join spu_sale_attr_value sv
        on  sa.spu_id=sv.spu_id and sa.sale_attr_id=sv.sale_attr_id
        where  sa.spu_id=#{spu_id}
    </select>
    <resultMap id="spuSaleAttrMap" type="cn.nosnow.gmall.bean.SpuSaleAttr" autoMapping="true">
        <result property="id" column="id" />
        <collection property="spuSaleAttrValueList" ofType="cn.nosnow.gmall.bean.SpuSaleAttrValue" autoMapping="true">
            <result property="id" column="sale_attr_value_id" />
        </collection>
    </resultMap>
</mapper>